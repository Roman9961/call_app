{% extends 'base.content.html.twig' %}

{% block title %}CallingTask index{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">

    <h1>CallingTask index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>List phones count</th>
                <th>action</th>
            </tr>
        </thead>
        <tbody>
        {% for calling_task in calling_tasks %}
            <tr>
                <td>{{ calling_task.id }}</td>
                <td>{{ calling_task.name }}</td>
                <td>{{ calling_task.callingList.clientMsisdns |length }}</td>
                <td>
                    <a class="btn btn-warning" href="{{ path('calling_task_edit', {'id': calling_task.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('calling_task_new') }}">Create new</a>
        </div>
    </div>
    </div>
{% endblock %}
